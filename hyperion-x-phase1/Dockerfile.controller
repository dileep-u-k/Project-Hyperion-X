FROM golang:1.24 as build

WORKDIR /src
COPY go.mod ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/hyperion-controller ./cmd/controller

# Runtime stage (distroless base)
FROM gcr.io/distroless/base-debian12:latest

COPY --from=build /out/hyperion-controller /bin/hyperion-controller

USER 65532:65532
ENTRYPOINT ["/bin/hyperion-controller"]
